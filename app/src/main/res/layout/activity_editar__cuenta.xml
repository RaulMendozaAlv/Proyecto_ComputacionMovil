<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raulmendoza.proyecto.Editar_Cuenta">

    <EditText
        android:id="@+id/et_NombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Nombre"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp" />

    <TextView
        android:id="@+id/tv_NombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:text="Nombre"
        android:layout_alignBaseline="@+id/et_NombreUsuario"
        android:layout_alignBottom="@+id/et_NombreUsuario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_Apellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Apellido"
        android:layout_below="@+id/et_NombreUsuario"
        android:layout_alignRight="@+id/tv_NombreUsuario"
        android:layout_alignEnd="@+id/tv_NombreUsuario" />

    <EditText
        android:id="@+id/et_Apellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Apellido"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/tv_Apellido"
        android:layout_alignBottom="@+id/tv_Apellido"
        android:layout_alignLeft="@+id/et_NombreUsuario"
        android:layout_alignStart="@+id/et_NombreUsuario" />

    <TextView
        android:id="@+id/tv_Rut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_Apellido"
        android:layout_alignStart="@+id/tv_Apellido"
        android:layout_below="@+id/tv_Apellido"
        android:layout_marginTop="25dp"
        android:text="RUT" />

    <EditText
        android:id="@+id/et_Rut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="RUT"
        android:inputType="textPersonName"
        android:layout_alignTop="@+id/tv_Rut"
        android:layout_alignLeft="@+id/et_Apellido"
        android:layout_alignStart="@+id/et_Apellido" />

    <EditText
        android:id="@+id/et_AntiguaContra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_Rut"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:ems="10"
        android:hint="Antigua Contraseña"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/et_NuevaContra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_AntiguaContra"
        android:layout_alignStart="@+id/et_AntiguaContra"
        android:layout_below="@+id/et_AntiguaContra"
        android:layout_marginTop="65dp"
        android:ems="10"
        android:hint="Nueva Contraseña"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_Rut"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="Cambiar Contraseña" />

</RelativeLayout>
